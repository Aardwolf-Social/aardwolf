<article class="media"><!-- Begin new post -->
  <figure class="media-left">
	<p class="image is-64x64">
	  <img src="https://bulma.io/images/placeholders/128x128.png" alt="{{ user_name }}">
	</p>
  </figure>
  <div class="media-content">
	<div class="field">
	  <p class="control">
		<textarea class="textarea" placeholder="{{ comment_placeholder }}"></textarea>
	  </p>
	</div>
	<nav class="level">
	  <div class="level-left">
		<div class="level-item">
		  <a class="button is-info">{{ post }}</a>
		</div>
	  </div>
	  <div class="level-right">
		<div class="level-item">
		  <label class="checkbox">
			<input type="checkbox"> {{ enter_post }}
		  </label>
		</div>
	  </div>
	</nav>
  </div>
</article><!-- End of new post -->
